{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Query Builder Tree to SQL Expression",
  "description": "Schema for validating tree JSON produced by react-awesome-query-builder",
  "oneOf": [
    {
      "$ref": "#/$defs/queryNode"
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/$defs/queryNode"
      },
      "description": "Array of query nodes"
    }
  ],
  "$defs": {
    "queryNode": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the node"
        },
        "type": {
          "type": "string",
          "enum": ["group", "rule"],
          "description": "Type of the node: either a group or a rule"
        }
      },
      "oneOf": [
        {
          "$ref": "#/$defs/groupNode"
        },
        {
          "$ref": "#/$defs/ruleNode"
        }
      ]
    },
    "groupNode": {
      "type": "object",
      "required": ["type", "properties", "children1"],
      "properties": {
        "type": {
          "const": "group"
        },
        "properties": {
          "type": "object",
          "required": ["conjunction"],
          "properties": {
            "conjunction": {
              "type": "string",
              "enum": ["AND", "OR"],
              "description": "Logical operator for combining child rules"
            },
            "not": {
              "type": "boolean",
              "description": "Whether to negate the entire group"
            }
          }
        },
        "children1": {
          "type": "array",
          "description": "Child nodes for group type",
          "items": {
            "$ref": "#/$defs/queryNode"
          }
        }
      }
    },
    "ruleNode": {
      "type": "object",
      "required": ["type", "properties"],
      "properties": {
        "type": {
          "const": "rule"
        },
        "properties": {
          "type": "object",
          "required": ["field", "operator", "value"],
          "properties": {
            "field": {
              "type": "string",
              "description": "Field/column name to apply the operator on"
            },
            "operator": {
              "type": "string",
              "description": "Comparison operator",
              "enum": [
                "equal",
                "not_equal",
                "less",
                "less_or_equal",
                "greater",
                "greater_or_equal",
                "like",
                "not_like",
                "starts_with",
                "ends_with",
                "between",
                "not_between",
                "is_null",
                "is_not_null",
                "is_empty",
                "is_not_empty"
              ]
            },
            "value": {
              "description": "Value or values to compare against",
              "oneOf": [
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" },
                { 
                  "type": "array",
                  "items": {
                    "oneOf": [
                      { "type": "string" },
                      { "type": "number" },
                      { "type": "boolean" },
                      { "type": "null" },
                      { "type": "object" }
                    ]
                  }
                },
                { "type": "null" },
                { "type": "object" }
              ]
            },
            "valueType": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Type of the value",
                  "enum": ["text", "number", "boolean", "date", "time", "datetime"]
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["text", "number", "boolean", "date", "time", "datetime"]
                  },
                  "description": "Types of multiple values"
                }
              ]
            },
            "valueSrc": {
              "oneOf": [
                { 
                  "type": "string",
                  "enum": ["value", "field", "func"],
                  "description": "Source of the value" 
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["value", "field", "func"]
                  },
                  "description": "Sources of multiple values"
                }
              ]
            },
            "funcName": {
              "type": "string",
              "description": "Function name for function-based operations",
              "enum": ["RULE_NAME", "RULE_REF", "$", "MID", "LEN", "TEXT", "SUM"]
            },
            "valueError": {
              "type": ["string", "array", "null"],
              "description": "Error message if value is invalid"
            },
            "operatorOptions": {
              "type": "object",
              "description": "Options specific to the operator"
            },
            "fieldSrc": {
              "type": "string",
              "description": "Source of the field"
            }
          }
        }
      },
      "not": {
        "required": ["children1"]
      }
    },
    "sqlOperatorMapping": {
      "description": "Mapping from query builder operators to SQL operators",
      "type": "object",
      "properties": {
        "equal": { "const": "=" },
        "not_equal": { "const": "!=" },
        "less": { "const": "<" },
        "less_or_equal": { "const": "<=" },
        "greater": { "const": ">" },
        "greater_or_equal": { "const": ">=" },
        "like": { "const": "LIKE" },
        "not_like": { "const": "NOT LIKE" },
        "starts_with": { "const": "LIKE" },
        "ends_with": { "const": "LIKE" },
        "between": { "const": "BETWEEN" },
        "not_between": { "const": "NOT BETWEEN" },
        "is_null": { "const": "IS NULL" },
        "is_not_null": { "const": "IS NOT NULL" },
        "is_empty": { "const": "= ''" },
        "is_not_empty": { "const": "!= ''" },
        "in": { "const": "IN" },
        "not_in": { "const": "NOT IN" },
        "AND": { "const": "AND" },
        "OR": { "const": "OR" }
      }
    },
    "sqlDataTypeMapping": {
      "description": "Mapping from query builder value types to SQL data types",
      "type": "object",
      "properties": {
        "text": { "const": "string" },
        "number": { "const": "number" },
        "boolean": { "const": "boolean" },
        "date": { "const": "date" },
        "time": { "const": "string" },
        "datetime": { "const": "date" },
        "select": { "const": "string" },
        "multiselect": { "const": "string" },
        "treeselect": { "const": "string" },
        "treemultiselect": { "const": "string" }
      }
    }
  }
}